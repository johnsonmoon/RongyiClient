<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="【分享】"
        android:id="@+id/ShareListItem_text_type"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="帅哥小编的护肤秘籍"
        android:id="@+id/ShareListItem_text_Title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ShareListItem_text_type"
        android:layout_toEndOf="@+id/ShareListItem_text_type" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/ShareListItem_ImageView"
        android:layout_below="@+id/ShareListItem_text_type"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:scaleType="fitXY"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="52"
        android:id="@+id/ShareListItem_text_ReadNum"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="阅读："
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ShareListItem_text_ReadNum"
        android:layout_toStartOf="@+id/ShareListItem_text_ReadNum" />

</RelativeLayout>