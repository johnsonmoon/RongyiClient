<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <xuyihao.rongyiclient.widget.MyNoScrollViewPager
        android:id="@+id/page01_imageCycleViewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </xuyihao.rongyiclient.widget.MyNoScrollViewPager>
    <LinearLayout
        android:id="@+id/page01_viewGroupPiont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            style="@style/linaer_bottom">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/page01_button_focus"
                android:background="@mipmap/pic_icon_2" />
        </LinearLayout>

        <LinearLayout
            style="@style/linaer_bottom">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/page01_button_hot"
                android:background="@mipmap/pic_icon_6" />
        </LinearLayout>

        <LinearLayout
            style="@style/linaer_bottom">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/page01_button_teach"
                android:background="@mipmap/pic_icon_6" />
        </LinearLayout>

        <LinearLayout
            style="@style/linaer_bottom">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/page01_button_near"
                android:background="@mipmap/pic_icon_3" />
        </LinearLayout>

        <LinearLayout
            style="@style/linaer_bottom">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/page01_button_good"
                android:background="@mipmap/pic_icon_5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>